{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2015",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "./src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
